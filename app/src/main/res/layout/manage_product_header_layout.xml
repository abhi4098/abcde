<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/background_light"
    android:orientation="horizontal"
    android:weightSum="1"

    >



    <LinearLayout
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight=".25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Product Id"
            android:gravity="start"
            android:maxLength="25"
            android:textSize="13sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            >
        </TextView>

        <LinearLayout
            android:layout_width="15dp"
            android:gravity="end"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_name_asc"
                android:layout_marginTop="5dp"
                android:layout_gravity="top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/arrow_up_image"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_name_dsc"
                android:layout_gravity="bottom">


                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/arrow_down"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="1dp"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent" >

        <View style="@style/Divider_light_gray" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight=".25"
        android:layout_height="match_parent" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:gravity="center"
            android:maxLength="10"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:text="Category"
            android:textStyle="bold"
            >
        </TextView>


        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_product_id_asc"
                android:layout_marginTop="5dp"
                android:layout_gravity="top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/arrow_up_image"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_product_id_dsc"
                android:layout_gravity="bottom">


                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/arrow_down"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="1dp"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent" >

        <View style="@style/Divider_light_gray" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight=".25"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"
            android:textStyle="bold"
            android:text="Minimum stock"

            >
        </TextView>


        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_wholesaler_asc"
                android:layout_marginTop="5dp"
                android:layout_gravity="top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/arrow_up_image"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_wholesaler_dsc"
                android:layout_gravity="bottom">


                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/arrow_down"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="1dp"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent" >

        <View style="@style/Divider_light_gray" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight=".25"
        android:layout_height="match_parent" >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8sp"
            android:paddingBottom="8sp"
            android:gravity="center"
            android:text="Default Margin"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:textSize="13sp"

            >
        </TextView>


        <LinearLayout
            android:layout_width="15dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_margin_asc"
                android:layout_marginTop="5dp"
                android:layout_gravity="top">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/arrow_up_image"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:id="@+id/ll_margin_dsc"
                android:layout_gravity="bottom">


                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/arrow_down"/>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="1dp"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent" >

        <View style="@style/Divider_light_gray" />
    </LinearLayout>




</LinearLayout>
