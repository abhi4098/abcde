        <View style="@style/Divider" />
    </LinearLayout>-->



    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="8sp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:lines="1"
        android:id="@+id/wholesaler"
        android:textSize="12sp"
        android:textStyle="normal"
        >
    </TextView>


    <!--    <LinearLayout
            android:layout_width="1dp"
            android:layout_gravity="center"
            android:layout_height="match_parent" >

            <View style="@style/Divider" />
        </LinearLayout>-->


    <TextView
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:textStyle="normal"
        android:lines="1"
        android:textSize="12sp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/previous_cost"

        >
    </TextView>

    <!--<LinearLayout
        android:layout_width="1dp"
        android:layout_gravity="center"
        android:layout_height="match_parent" >

        <View style="@style/Divider" />
    </LinearLayout>-->

    <TextView

        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:lines="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="85dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:id="@+id/new_cost"
        android:textStyle="normal"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/margin"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:focusable="false"
        android:layout_marginStart="5dp"
        android:background="@drawable/rectangular_transparent_gray"
        android:orientation="horizontal">



        <!-- <Button
             android:id="@+id/decrease"
             android:layout_width="10dp"
             android:layout_height="10dp"
            android:layout_marginStart="10dp"
             android:background="@drawable/arrow_down"
             android:onClick="decreaseInteger"
             />-->

        <EditText
            android:id="@+id/integer_number"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textSize="12sp"
            android:lines="1"
            android:layout_marginStart="10dp"
            android:textStyle="normal"
            />

        <Button
            android:id="@+id/increase"
            android:layout_width="20dp"
            android:background="@drawable/update_button_selector"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:onClick="increaseInteger"
            />


    </LinearLayout>
    <TextView

        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:lines="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="85dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:id="@+id/prev_price"
        android:textStyle="normal"
        >
    </TextView>

    <TextView

        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:lines="1"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="85dp"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:id="@+id/new_price"
        android:textStyle="normal"
        >
    </TextView>


<LinearLayout
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:lines="1"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:id="@+id/status"
        android:textStyle="normal"

        >
    </TextView>

</LinearLayout>

