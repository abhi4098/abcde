<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/background_light_gray"
    android:orientation="horizontal"

    >


    <TextView
        android:id="@+id/item_name"
        android:layout_width="110dp"
        android:lines="1"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textStyle="normal"
        >
    </TextView>


    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:lines="1"
        android:textSize="12sp"
        android:id="@+id/item_id"
        android:textStyle="normal"
        >
    </TextView>


    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:textStyle="normal"
        android:textSize="12sp"
        android:lines="1"
        android:layout_marginEnd="5dp"
        android:id="@+id/category"

        >
    </TextView>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:textStyle="normal"
        android:lines="1"
        android:textSize="12sp"
        android:layout_marginEnd="5dp"
        android:id="@+id/wholesale"

        >
    </TextView>


    <TextView

        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_width="70dp"
        android:textSize="12sp"
        android:lines="1"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/previous_cost"
        android:textStyle="normal"
        >
    </TextView>


    <TextView

        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_width="70dp"
        android:layout_marginStart="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/new_cost"
        android:textSize="12sp"
        android:lines="1"
        android:textStyle="normal"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/margin"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:focusable="false"
        android:layout_marginStart="5dp"
        android:background="@drawable/rectangular_transparent_gray"
        android:orientation="horizontal">



        <!-- <Button
             android:id="@+id/decrease"
             android:layout_width="10dp"
             android:layout_height="10dp"
            android:layout_marginStart="10dp"
             android:background="@drawable/arrow_down"
             android:onClick="decreaseInteger"
             />-->

        <EditText
            android:id="@+id/margin_int"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:lines="1"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:textStyle="normal"
            />

        <Button
            android:id="@+id/update"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/update_button_selector"
            android:onClick="increaseInteger"
            />


    </LinearLayout>



    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:textSize="12sp"
        android:lines="1"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/prev_price"
        android:textStyle="normal"

        >
    </TextView>






    <TextView

        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:textSize="12sp"
        android:lines="1"
        android:id="@+id/new_price"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textStyle="normal"
        >
    </TextView>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:gravity="center"
            android:lines="1"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:id="@+id/status"
            >

        </TextView>
    </LinearLayout>

    <TextView

        android:layout_width="57dp"
        android:layout_height="wrap_content"
        android:paddingTop="8sp"
        android:paddingBottom="8sp"
        android:gravity="center"
        android:textSize="12sp"
        android:id="@+id/stock"
        android:lines="1"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:textStyle="normal"
        >
    </TextView>

</LinearLayout>


