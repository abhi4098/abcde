<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/background_light_gray"
    android:orientation="horizontal"
    android:weightSum="1"

    >

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/item_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:maxLength="25"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textStyle="normal"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="40dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8sp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="20dp"
            android:paddingBottom="8sp"
            android:maxLength="20"
            android:gravity="start"
            android:textSize="12sp"
            android:id="@+id/item_category"
            android:textStyle="normal"
            >
        </TextView>


    </LinearLayout>



    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/minimum_stock"
            android:background="@drawable/rectangular_transparent_gray"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">



            <!-- <Button
                 android:id="@+id/decrease"
                 android:layout_width="10dp"
                 android:layout_height="10dp"
                android:layout_marginStart="10dp"
                 android:background="@drawable/arrow_down"
                 android:onClick="decreaseInteger"
                 />-->

            <EditText
                android:id="@+id/stock_quantity"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:textStyle="normal"
                />

            <Button
                android:id="@+id/update_stock"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/update_button_selector"
                android:layout_marginEnd="2dp"
                />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:gravity="center"
       >
        <LinearLayout
            android:id="@+id/margin"
            android:background="@drawable/rectangular_transparent_gray"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">



            <!-- <Button
                 android:id="@+id/decrease"
                 android:layout_width="10dp"
                 android:layout_height="10dp"
                android:layout_marginStart="10dp"
                 android:background="@drawable/arrow_down"
                 android:onClick="decreaseInteger"
                 />-->

            <EditText
                android:id="@+id/margin_int"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="12sp"
                android:layout_marginStart="10dp"
                android:textStyle="normal"
                />

            <Button
                android:id="@+id/update_margin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/update_button_selector"
                android:layout_marginEnd="2dp"
                />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>




